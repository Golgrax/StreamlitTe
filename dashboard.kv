def show_dashboard():
    st.title("Dashboard")
    user_data = st.session_state['user_data']
    st.write(f"Hello, **{user_data['full_name']}**")
    
    # Fetch pet profile
    try:
        response = requests.get(f"http://127.0.0.1:8000/pet_profile/?email={user_data['email']}")
        if response.status_code == 200:
            pet_data = response.json()[0] if isinstance(response.json(), list) else response.json()
            st.write(f"**Pet Name:** {pet_data.get('pet_name', 'N/A')}")
            st.write(f"**Breed:** {pet_data.get('pet_breed', 'N/A')}")
            st.write(f"**Age:** {pet_data.get('pet_age', 'N/A')} {pet_data.get('age_unit', '')} old")
            st.write(f"**Gender:** {pet_data.get('gender', 'N/A')}")
    except Exception as e:
        st.error(f"Error fetching pet profile: {e}")
